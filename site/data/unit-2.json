    {
      "id": "2-2",
      "name": "Cînavên Kesîn",
      "subtitle": "Personal Pronouns",
      "learningObjective": "Learn all Kurdish personal pronouns (subject and object forms) and common everyday phrases",
      "durationMinutes": 12,
      "vocabPreview": ["ez / min", "tu / te", "Tu bi xêr hatî", "Dora min e"],
      "wordsLearned": [
        { "ku": "ez", "en": "I" },
        { "ku": "tu", "en": "you (singular)" },
        { "ku": "ew", "en": "he / she / they" },
        { "ku": "em", "en": "we" },
        { "ku": "hûn", "en": "you (plural / formal)" },
        { "ku": "min", "en": "me (object form of ez)" },
        { "ku": "te", "en": "you (object form of tu)" },
        { "ku": "wî / wê", "en": "him / her (object)" },
        { "ku": "me", "en": "us (object form of em)" },
        { "ku": "we", "en": "you all (object form of hûn)" },
        { "ku": "wan", "en": "them (object form of ew)" },
        { "ku": "Tu bi xêr hatî", "en": "Welcome (You are welcome)" }
      ],
      "activities": [
        {
          "type": "flashcard",
          "instruction": "Learn this pronoun pair",
          "word": "ez / min",
          "hint": "Tap to flip",
          "translation": "I / me",
          "example": "Ez baş im. Navê min Armanc e.",
          "exampleTranslation": "I am good. My name is Armanc."
        },
        {
          "type": "flashcard",
          "instruction": "Learn this pronoun pair",
          "word": "tu / te",
          "hint": "Tap to flip",
          "translation": "you / you (object)",
          "example": "Tu çawa yî? Navê te çi ye?",
          "exampleTranslation": "How are you? What is your name?"
        },
        {
          "type": "flashcard",
          "instruction": "Learn this pronoun pair",
          "word": "ew / wî, wê",
          "hint": "Tap to flip",
          "translation": "he, she / him, her",
          "example": "Ew baş e. Navê wî Azad e.",
          "exampleTranslation": "He is good. His name is Azad."
        },
        {
          "type": "reading",
          "instruction": "Read the pronoun overview",
          "title": "Cînavên Kesîn — Personal Pronouns",
          "lines": [
            { "speaker": "", "ku": "Ez — min (I — me)", "en": "I am / me" },
            { "speaker": "", "ku": "Tu — te (you — you)", "en": "You are / you" },
            { "speaker": "", "ku": "Ew — wî/wê (he/she — him/her)", "en": "He/she is / him/her" },
            { "speaker": "", "ku": "Em — me (we — us)", "en": "We are / us" },
            { "speaker": "", "ku": "Hûn — we (you all — you all)", "en": "You (plural) are / you all" },
            { "speaker": "", "ku": "Ew — wan (they — them)", "en": "They are / them" }
          ]
        },
