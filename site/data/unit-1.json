  "lessons": [
    {
      "id": "1-1",
      "name": "Diyaloga Yekem",
      "description": "Learn basic Kurdish greetings, introductions, and farewells through a guided dialogue between Armanc and Bêrîvan.",
      "slug": "diyaloga-yekem",
      "orderIndex": 0,
      "learningObjective": "Learn basic Kurdish greetings, introductions, and farewells",
      "durationMinutes": 10,
      "isPublished": true,
      "metadata": {
        "subtitle": "First Dialogue",
        "vocabPreview": ["Roj baş", "Silav", "Navê min", "Bi xatirê te"],
        "wordsLearned": [
          { "ku": "Roj baş", "en": "Good day" },
          { "ku": "Silav", "en": "Hello" },
          { "ku": "Navê min ... e", "en": "My name is ..." },
          { "ku": "Tu çawa yî?", "en": "How are you?" },
          { "ku": "Ez baş im", "en": "I am good" },
          { "ku": "Spas", "en": "Thanks" },
          { "ku": "Bi xatirê te", "en": "Goodbye (to the one leaving)" },
          { "ku": "Oxir be", "en": "Goodbye (to the one staying)" },
          { "ku": "Ev çi ye?", "en": "What is this?" },
          { "ku": "Saxî û silametî", "en": "Get well soon" }
        ]
      },
      "activities": [
        {
          "id": "1-1-01",
          "type": "flashcard",
          "orderIndex": 0,
          "isPublished": true,
          "instruction": "Learn this greeting",
          "content": {
            "word": "Roj baş",
            "hint": "Tap to flip",
            "translation": "Good day / Hello",
            "example": "Roj baş! Tu çawa yî?",
            "exampleTranslation": "Good day! How are you?"
          }
        },
        {
          "id": "1-1-02",
          "type": "flashcard",
          "orderIndex": 1,
          "isPublished": true,
          "instruction": "Learn this phrase",
          "content": {
            "word": "Navê min ... e",
            "hint": "Tap to flip",
            "translation": "My name is ...",
            "example": "Navê min Armanc e.",
            "exampleTranslation": "My name is Armanc."
          }
        },
        {
          "id": "1-1-03",
          "type": "flashcard",
          "orderIndex": 2,
          "isPublished": true,
          "instruction": "Learn this word",
          "content": {
            "word": "Spas",
            "hint": "Tap to flip",
            "translation": "Thanks",
            "example": "Spas, ez baş im.",
            "exampleTranslation": "Thanks, I am good."
          }
        },
        {
          "id": "1-1-04",
          "type": "reading",
          "orderIndex": 3,
          "isPublished": true,
          "instruction": "Read the dialogue",
          "content": {
            "title": "Roj baş — First meeting",
            "lines": [
              { "speaker": "Armanc", "ku": "Roj baş!", "en": "Good day!" },
              { "speaker": "Bêrîvan", "ku": "Roj baş!", "en": "Good day!" },
              { "speaker": "Armanc", "ku": "Navê te çi ye?", "en": "What is your name?" },
              { "speaker": "Bêrîvan", "ku": "Navê min Bêrîvan e. Navê te çi ye?", "en": "My name is Bêrîvan. What is your name?" },
              { "speaker": "Armanc", "ku": "Navê min Armanc e.", "en": "My name is Armanc." },
              { "speaker": "Bêrîvan", "ku": "Armanc, tu çawa yî?", "en": "Armanc, how are you?" },
              { "speaker": "Armanc", "ku": "Ez baş im, spas! Û tu?", "en": "I am good, thanks! And you?" },
              { "speaker": "Bêrîvan", "ku": "Ez nexweş im.", "en": "I am sick." },
              { "speaker": "Armanc", "ku": "Saxî û silametî!", "en": "Get well soon!" },
              { "speaker": "Bêrîvan", "ku": "Spas!", "en": "Thanks!" }
            ]
          }
        },
        {
          "id": "1-1-05",
          "type": "mcq",
          "orderIndex": 4,
          "isPublished": true,
          "instruction": "What does \"Navê te çi ye?\" mean?",
          "content": {
            "options": ["How are you?", "What is your name?", "Where are you from?", "How old are you?"],
            "correct": 1,
            "explanation": "\"Navê te çi ye?\" means \"What is your name?\" — Navê = name, te = your, çi = what, ye = is."
          }
        },
        {
          "id": "1-1-06",
          "type": "mcq",
          "orderIndex": 5,
          "isPublished": true,
          "instruction": "Bêrîvan says \"Ez nexweş im.\" What does this mean?",
          "content": {
            "options": ["I am good", "I am tired", "I am sick", "I am happy"],
            "correct": 2,
            "explanation": "\"nexweş\" means \"sick.\" Compare with \"baş\" (good): Ez baş im = I am good, Ez nexweş im = I am sick."
          }
        },
        {
          "id": "1-1-07",
          "type": "gap_fill",
          "orderIndex": 6,
          "isPublished": true,
          "instruction": "Complete the greeting",
          "content": {
            "before": "Navê min ",
            "gap": "Armanc",
            "after": " e.",
            "display": "Navê min ___ e.",
            "wordBank": ["Armanc", "baş", "nexweş", "spas"],
            "explanation": "\"Navê min ... e\" is the pattern for saying your name. The name goes in the blank."
          }
        },
        {
          "id": "1-1-08",
          "type": "matching",
          "orderIndex": 7,
          "isPublished": true,
          "instruction": "Match the Kurdish phrases",
          "content": {
            "pairs": [
              { "ku": "Roj baş", "en": "Good day" },
              { "ku": "Bi xatirê te", "en": "Goodbye (leaving)" },
              { "ku": "Oxir be", "en": "Goodbye (staying)" },
              { "ku": "Saxî û silametî", "en": "Get well soon" }
            ]
          }
        },
        {
          "id": "1-1-09",
          "type": "mcq",
          "orderIndex": 8,
          "isPublished": true,
          "instruction": "How do you say goodbye to someone who is leaving?",
          "content": {
            "options": ["Roj baş", "Bi xatirê te", "Oxir be", "Spas"],
            "correct": 2,
            "explanation": "\"Oxir be\" is said to the person leaving. \"Bi xatirê te\" is said BY the person leaving. Think of it: the one staying says 'go safely' (Oxir be)."
          }
        }
      ]
    },
    {
