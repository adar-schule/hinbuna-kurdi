          "content": {
            "title": { "en": "Roj baş — First meeting", "de": "Roj baş — Erste Begegnung" },
            "lines": [
              { "speaker": "Armanc", "ku": "Roj baş!", "en": "Good day!", "de": "Guten Tag!" },
              { "speaker": "Bêrîvan", "ku": "Roj baş!", "en": "Good day!", "de": "Guten Tag!" },
              { "speaker": "Armanc", "ku": "Navê te çi ye?", "en": "What is your name?", "de": "Wie heißt du?" },
              { "speaker": "Bêrîvan", "ku": "Navê min Bêrîvan e. Navê te çi ye?", "en": "My name is Bêrîvan. What is your name?", "de": "Mein Name ist Bêrîvan. Wie heißt du?" },
              { "speaker": "Armanc", "ku": "Navê min Armanc e.", "en": "My name is Armanc.", "de": "Mein Name ist Armanc." },
              { "speaker": "Bêrîvan", "ku": "Armanc, tu çawa yî?", "en": "Armanc, how are you?", "de": "Armanc, wie geht es dir?" },
              { "speaker": "Armanc", "ku": "Ez baş im, spas! Û tu?", "en": "I am good, thanks! And you?", "de": "Mir geht es gut, danke! Und dir?" },
              { "speaker": "Bêrîvan", "ku": "Ez nexweş im.", "en": "I am sick.", "de": "Ich bin krank." },
              { "speaker": "Armanc", "ku": "Saxî û silametî!", "en": "Get well soon!", "de": "Gute Besserung!" },
              { "speaker": "Bêrîvan", "ku": "Spas!", "en": "Thanks!", "de": "Danke!" }
            ]
          }
        },
        {
          "id": "1-1-05",
          "type": "mcq",
          "orderIndex": 4,
          "isPublished": true,
          "instruction": { "en": "What does \"Navê te çi ye?\" mean?", "de": "Was bedeutet \"Navê te çi ye?\"?" },
          "content": {
            "options": [
              { "en": "How are you?", "de": "Wie geht es dir?" },
              { "en": "What is your name?", "de": "Wie heißt du?" },
              { "en": "Where are you from?", "de": "Woher kommst du?" },
              { "en": "How old are you?", "de": "Wie alt bist du?" }
            ],
            "correct": 1,
            "explanation": { "en": "\"Navê te çi ye?\" means \"What is your name?\" — Navê = name, te = your, çi = what, ye = is.", "de": "\"Navê te çi ye?\" bedeutet \"Wie heißt du?\" — Navê = Name, te = dein, çi = was, ye = ist." }
          }
        },
        {
          "id": "1-1-06",
          "type": "mcq",
          "orderIndex": 5,
          "isPublished": true,
          "instruction": { "en": "Bêrîvan says \"Ez nexweş im.\" What does this mean?", "de": "Bêrîvan sagt \"Ez nexweş im.\" Was bedeutet das?" },
          "content": {
            "options": [
              { "en": "I am good", "de": "Mir geht es gut" },
              { "en": "I am tired", "de": "Ich bin müde" },
              { "en": "I am sick", "de": "Ich bin krank" },
              { "en": "I am happy", "de": "Ich bin glücklich" }
            ],
            "correct": 2,
            "explanation": { "en": "\"nexweş\" means \"sick.\" Compare with \"baş\" (good): Ez baş im = I am good, Ez nexweş im = I am sick.", "de": "\"nexweş\" bedeutet \"krank\". Vergleiche mit \"baş\" (gut): Ez baş im = Mir geht es gut, Ez nexweş im = Ich bin krank." }
          }
        },
        {
          "id": "1-1-07",
          "type": "gap_fill",
          "orderIndex": 6,
          "isPublished": true,
          "instruction": { "en": "Complete the greeting", "de": "Vervollständige die Begrüßung" },
