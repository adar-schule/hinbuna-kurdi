          "type": "reading",
          "order_index": 3,
          "is_published": true,
          "content": {
            "title": {
              "en": "Roj baş — First meeting",
              "de": "Roj baş — Erste Begegnung"
            },
            "lines": [
              {
                "speaker": "Armanc",
                "ku": "Roj baş!",
                "en": "Good day!",
                "de": "Guten Tag!"
              },
              {
                "speaker": "Bêrîvan",
                "ku": "Roj baş!",
                "en": "Good day!",
                "de": "Guten Tag!"
              },
              {
                "speaker": "Armanc",
                "ku": "Navê te çi ye?",
                "en": "What is your name?",
                "de": "Wie heißt du?"
              },
              {
                "speaker": "Bêrîvan",
                "ku": "Navê min Bêrîvan e. Navê te çi ye?",
                "en": "My name is Bêrîvan. What is your name?",
                "de": "Mein Name ist Bêrîvan. Wie heißt du?"
              },
              {
                "speaker": "Armanc",
                "ku": "Navê min Armanc e.",
                "en": "My name is Armanc.",
                "de": "Mein Name ist Armanc."
              },
              {
                "speaker": "Bêrîvan",
                "ku": "Armanc, tu çawa yî?",
                "en": "Armanc, how are you?",
                "de": "Armanc, wie geht es dir?"
              },
              {
                "speaker": "Armanc",
                "ku": "Ez baş im, spas! Û tu?",
                "en": "I am good, thanks! And you?",
                "de": "Mir geht es gut, danke! Und dir?"
              },
              {
                "speaker": "Bêrîvan",
                "ku": "Ez nexweş im.",
                "en": "I am sick.",
                "de": "Ich bin krank."
              },
              {
                "speaker": "Armanc",
                "ku": "Saxî û silametî!",
                "en": "Get well soon!",
                "de": "Gute Besserung!"
              },
              {
                "speaker": "Bêrîvan",
                "ku": "Spas!",
                "en": "Thanks!",
                "de": "Danke!"
              }
            ],
            "instruction": {
              "en": "Read the dialogue",
              "de": "Lies den Dialog"
            }
          },
