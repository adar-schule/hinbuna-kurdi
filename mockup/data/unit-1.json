          "content": {
            "title": {
              "en": "Ev kîjan reng e? — What color is this?",
              "de": "Ev kîjan reng e? — Welche Farbe ist das?"
            },
            "lines": [
              {
                "speaker": "Armanc",
                "ku": "Ev kîjan reng e?",
                "en": "What color is this?",
                "de": "Welche Farbe ist das?"
              },
              {
                "speaker": "Bêrîvan",
                "ku": "Ev zer e.",
                "en": "This is yellow.",
                "de": "Das ist gelb."
              },
              {
                "speaker": "Armanc",
                "ku": "Ev kîjan reng e?",
                "en": "What color is this?",
                "de": "Welche Farbe ist das?"
              },
              {
                "speaker": "Bêrîvan",
                "ku": "Ev kesk e.",
                "en": "This is green.",
                "de": "Das ist grün."
              },
              {
                "speaker": "Armanc",
                "ku": "Ez bi te serbilind im.",
                "en": "I am proud of you.",
                "de": "Ich bin stolz auf dich."
