          "is_published": true,
          "content": {
            "title": {
              "en": "Çar peyvên 'kevn' — Four words for 'old'",
              "de": "Çar peyvên 'kevn' — Vier Wörter für ‚alt'"
            },
            "lines": [
              {
                "speaker": "",
                "ku": "Mêr: Ez kal im. (masculine)",
                "en": "Man: I am old.",
                "de": "Mann: Ich bin alt."
              },
              {
                "speaker": "",
                "ku": "Jin: Ez pîr im. (feminine)",
                "en": "Woman: I am old.",
                "de": "Frau: Ich bin alt."
              },
              {
                "speaker": "",
                "ku": "Mase kevn e. (object)",
                "en": "The table is old.",
                "de": "Der Tisch ist alt."
              },
              {
                "speaker": "",
                "ku": "Nan kartû ye. (food)",
                "en": "The bread is stale.",
                "de": "Das Brot ist abgestanden."
              },
              {
                "speaker": "",
                "ku": "Heval kal e. (male friend)",
                "en": "The (male) friend is old.",
                "de": "Der Freund ist alt."
              },
              {
                "speaker": "",
                "ku": "Heval pîr e. (female friend)",
                "en": "The (female) friend is old.",
                "de": "Die Freundin ist alt."
              }
            ],
            "instruction": {
              "en": "Read the examples",
              "de": "Lies die Beispiele"
            }
          },
